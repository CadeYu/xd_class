<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.xdclass.online_xdclass.mapper.UserMapper">



    <insert id="save" parameterType="net.xdclass.online_xdclass.model.entity.User">

        INSERT  INTO online_xdclass.user (name, pwd, head_img, phone , create_time)
        values (#{name,jdbcType=VARCHAR}, #{pwd,jdbcType=VARCHAR}, #{headImg,jdbcType=VARCHAR},
                #{phone,jdbcType=VARCHAR},#{createTime,jdbcType=TIMESTAMP})

    </insert>


    <!--根据手机号查询用户信息-->
    <select id="findByPhone" resultType="net.xdclass.online_xdclass.model.entity.User">
        select * from online_xdclass.user where phone = #{phone};
    </select>


    <!--根据手机号和密码查询用户-->
    <select id="findByPhoneAndPwd" resultType="net.xdclass.online_xdclass.model.entity.User">
        select * from online_xdclass.user
        where phone = #{phone} and pwd = #{pwd};
    </select>


    <!--根据用户id查询用户信息-->
    <select id="findByUserId" resultType="net.xdclass.online_xdclass.model.entity.User">

        select  * from online_xdclass.user where id=#{user_id}

    </select>

</mapper>